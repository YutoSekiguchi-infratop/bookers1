<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4 class="body">Body</h4>
  <%= f.text_area :body%>
  
  <%= f.submit "Update Book", class: "submit-btn" %>
<% end %>

<div class="link-of-edit">
  <%= link_to "Show", book_path(@book.id), class: "link" %>
  <p>|</p>
  <%= link_to "Back", books_path, class: "link" %>
</div>